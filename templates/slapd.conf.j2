# {{ ansible_managed }}
#
# Default slapd configuration.
# This file is not loaded by slapd, but used to convert it to OLC.
# Do not modify this file, it will have no effect.
#

# SSF configuration
localSSF 512

#####
## Schemas
#####

# Core attributes
include {{ schema_dir }}/core.schema
# Cosine and Internet X.500
include {{ schema_dir }}/cosine.schema
# inetOrgPerson
#include /etc/ldap/schema/inetorgperson.schema

#####
# PID and arguments
#####

pidfile  {{ run_dir }}/slapd.pid
argsfile {{ run_dir }}/slapd.args

#####
# OLC
#####

database config
rootdn   {{ olc_rootdn }}
rootpw   {{ hashedPassword.stdout }}
access   to * by * none

